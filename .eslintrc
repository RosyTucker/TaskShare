{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parser-options": {
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "env": {
    "mocha": true
  },
  "globals": {
    "fetch": true,
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true,
    "describe": true,
    "context": true,
    "xit": true,
    "it": true
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-console": 0,
    "max-len": [
      "error",
      120,
      2
    ],
    "mocha/no-exclusive-tests": "error",
    "import/prefer-default-export": 0,
    "import/no-named-as-default": 0
  }
}